      },
      {
        "id": "disputed area boundary fill",
        "source": "country-boundaries",
        "source-layer": "country_boundaries",
        "type": "fill",
        "filter": [
          "==",
          [
            "get",
            "disputed"
          ],
          "true"
        ],
        "paint": {
          "fill-color": "rgba(200,100,251, 0.3)",
          "fill-outline-color": "#ff0000"
        }
      },
      {
        "id": "undisputed country labels",
        "source": "country-boundaries",
        "source-layer": "country_boundaries",
